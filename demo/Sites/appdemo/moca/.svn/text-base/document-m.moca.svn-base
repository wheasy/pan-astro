@import "variables-m";
@import "lib/basic";
@import "lib/reset";
@import "lib/element";
@import "lib/layout";
html{
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
    width: 100%;
    height:100%;
}
body{
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    font-weight:300;
}
* {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    outline:none;
    -webkit-tap-highlight-color:rgba(0,0,0,0);
}
@media only screen and (min-width: 400px){
    html {
        font-size:400/320*@baseFontSize !important;
    }
}
@media only screen and (min-width: 420px){
    html {
        font-size:420/320*@baseFontSize !important;
    }
}
@media only screen and (min-width: 480px){
    html {
        font-size: 480/320*@baseFontSize !important; 
    }
}
@media only screen and (min-width: 560px){
    html {
        font-size: 560/320*@baseFontSize !important; 
    }
}
@media only screen and (min-width: 640px){
    html {
        font-size: 640/320*@baseFontSize !important; 
    }
}